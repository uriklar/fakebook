<div class="small-user">
	<%= image_tag user.profile_pic_url %>

	<div class="user-actions">
		
		<%= link_to user do %>
			<div class="user-action">View</div>
		<% end %>

		<% if current_user.is_friend(user) %>
			<%= link_to friendship_path(current_user.friendship_with(user)), method: :delete do %>
					<div class="user-action">Remove Friend</div>
			<% end %>
		<% else %>
			<%= link_to friendships_path({
				friendship: {
					user_id: current_user.id,
					friend_id: user.id
				}
			}), method: :post do %>
				<div class="user-action">Add Friend</div>
			<% end %>
		<% end %>

		
		

	</div>
</div>